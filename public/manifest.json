{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Modestus",
  "description": "Modestus AI guardian for safety and valuable insights.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Modestus"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage", "sidePanel"],
  "background": {
    "service_worker": "background.js",
    "type": "module",
    "mode": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://www.reddit.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tailwind.config.js"],
      "matches": ["https://x.com/*", "https://www.reddit.com/*"]
    }
  ],
  "icons": {
    "16": "modestus-16x16.png",
    "32": "modestus-32x32.png",
    "64": "modestus-64x64.png",
    "128": "modestus-128x128.png"
  }
}
